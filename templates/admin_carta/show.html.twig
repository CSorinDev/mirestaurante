{% extends 'base.html.twig' %}

{% block title %}
 - Ver Carta
{% endblock %}

{% block body %}
	<main>
		<h1>Producto</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ carta.id }}</td>
				</tr>
				<tr>
					<th>Nombre</th>
					<td>{{ carta.nombre }}</td>
				</tr>
				<tr>
					<th>Descripci√≥n</th>
					<td>{{ carta.descripcion }}</td>
				</tr>
				<tr>
					<th>Precio</th>
					<td>{{ carta.precio }}</td>
				</tr>
				<tr>
					<th>Imagen</th>
					<td>
						{% if carta.imagen %}
							<img src="{{ asset('uploads/productos/' ~ carta.imagen) }}" alt="Imagen de {{ carta.nombre }}" style="max-width: 200px; height: auto; border-radius: 8px;">
						{% else %}
							<span class="text-muted">Sin imagen disponible</span>
						{% endif %}
					</td>
				</tr>
			</tbody>
		</table>

		<section class="flex-center">
			<a class="btn" href="{{ path('app_admin_carta_edit', {'id': carta.id}) }}">Editar</a>
			<a href="{{ path('app_admin_carta_index') }}">Volver a la lista de productos</a>
		</section>
	</main>
{% endblock %}
