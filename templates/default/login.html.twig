{% extends 'base.html.twig' %}

{% block title %}
	miResaurante - Inicio
{% endblock %}

{% block body %}
	<main>
		<section>
			{{ form_start(login_form) }}
			{# username #}
			<div>
				{{ form_label(login_form.username) }}
				{{ form_widget(login_form.username) }}
			</div>
			<small class="error-message">
				{{ form_errors(login_form.username) }}
			</small>
			{# password #}
			<div>
				{{ form_label(login_form.password) }}
				{{ form_widget(login_form.password) }}
			</div>
			<small class="error-message">
				{{ form_errors(login_form.password) }}
			</small>
			{# submit button #}
			{{ form_row(login_form.submit_button) }}
			<div style="text-align: center;">
				¿Aún no eres miembro?
				<a style="color: blue" href="{{path('register')}}">Regístrate</a>
			</div>
			{{ form_end(login_form) }}
		</section>
	</main>
{% endblock %}
